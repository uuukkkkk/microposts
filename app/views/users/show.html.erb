<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
      <ul>
        <li>
          <%= link_to 'following_list', followings_user_path  %> (<%= @user.following_users.count %>)
        </li>
        <li>
          <%= link_to 'follower_list', followers_user_path %> (<%= @user.follower_users.count %>)
        </li>
      </ul>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>