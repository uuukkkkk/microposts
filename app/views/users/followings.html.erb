<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
      <ul>
        <li>
          <%= link_to 'following_list', followings_user_path  %> (<%= @user.following_users.count %>)
        </li>
        <li>
          <%= link_to 'follower_list', followers_user_path %> (<%= @user.follower_users.count %>)
        </li>
      </ul>
  </aside>
  <div class="col-md-8">
    <h3>followings (<%= @user.following_users.count %>)</h3>
     <% if @user.following_users.present?  %>
       <ul class="follow" style="list-style:none;">
        <%= render @followings %>
        </ul>
      <% else %>
      <%= paginate @followings %>
       フォローしていません。
    <% end %>
  </div>
</div>