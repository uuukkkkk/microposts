<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <ul>
        <li><%= link_to 'following_list', followings_user_path  %></li>
        <li><%= link_to 'follower_list', followers_user_path %></li>
      </ul>
      
    </section>
  </aside>
  <div class="col-md-8">
     <% if @user.follower_users.present? %>
     <h3>followers (<%= @user.follower_users.count %>)</h3>
       <ul class="follower">
        <%= render @followers %>
        </ul>
      <% else %>
       フォローされていません。
    <% end %>
  </div>
</div>